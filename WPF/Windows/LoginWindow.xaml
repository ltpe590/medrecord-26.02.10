<Window x:Class="WPF.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medical Records - Login" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Biometric Button Style -->
        <Style x:Key="BiometricButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="Medical Records System" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Secure Login" 
                           FontSize="14" 
                           Foreground="White"
                           Opacity="0.9"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" Padding="40,0" Background="White" Margin="20,20">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                
                <!-- Username -->
                <TextBlock Text="Username" FontWeight="SemiBold" FontSize="12" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtUsername" 
                         FontSize="14"
                         Padding="10,8"
                         Margin="0,5"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         TabIndex="0"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" FontSize="12" Foreground="#555" Margin="0,15,0,5"/>
                <PasswordBox x:Name="TxtPassword" 
                             FontSize="14"
                             Padding="10,8"
                             Margin="0,5"
                             PasswordChanged="TxtPassword_PasswordChanged"
                             TabIndex="1"/>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="12"
                           Foreground="#FF9800"
                           TextAlignment="Center"
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>

                <!-- Buttons -->
                <StackPanel Margin="0,10,0,0">
                    
                    <!-- Login with Password Button -->
                    <Button x:Name="BtnLogin"
                            Content="ðŸ”‘ Login with Password"
                            Style="{StaticResource ModernButton}"
                            Click="LoginButton_Click"
                            TabIndex="2"/>

                    <!-- Login with Biometric Button -->
                    <Button x:Name="BtnBiometric"
                            Content="ðŸ‘† Login with Fingerprint"
                            Style="{StaticResource BiometricButton}"
                            Click="BiometricLoginButton_Click"
                            Visibility="{Binding BiometricAvailable, Converter={StaticResource BoolToVisibilityConverter}}"
                            TabIndex="3"/>

                </StackPanel>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,5,0,0"
                            Visibility="{Binding IsLoggingIn, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="â³ Logging in..." 
                               FontSize="12" 
                               Foreground="#666"
                               VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
