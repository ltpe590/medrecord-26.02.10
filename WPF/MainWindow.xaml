<Window x:Class="WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="clr-namespace:WPF.Helpers"
        mc:Ignorable="d"
        Title="Patient Visit Management"
        Width="{x:Static sys:SystemParameters.PrimaryScreenWidth}"
        Height="{x:Static sys:SystemParameters.PrimaryScreenHeight}"
        Background="#FAFAFA">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="VerticalTabButton" TargetType="RadioButton">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="10">
                                <TextBlock Text="{TemplateBinding Tag}"
                                           FontSize="32"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="{TemplateBinding Content}"
                                           HorizontalAlignment="Center"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{TemplateBinding Foreground}"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppAccent}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AppAccentDark}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RoundedButtonTemplate" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SaveVisitButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonTemplate}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CompleteVisitButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonTemplate}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PauseVisitButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonTemplate}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <RadioButton Grid.Row="0"
                         x:Name="PatientsTabButton"
                         Content="Patients"
                         Tag="👤"
                         Style="{StaticResource VerticalTabButton}"
                         GroupName="MainTabs"
                         IsChecked="True"
                         Checked="PatientsTab_Checked"/>
            <RadioButton Grid.Row="1"
                         x:Name="VisitTabButton"
                         Content="Visit"
                         Tag="📋"
                         Style="{DynamicResource VerticalTabButton}"
                         GroupName="MainTabs"
                         Checked="VisitTab_Checked"/>
        </Grid>
        <Grid Grid.Column="1" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Background="#FFFFFF" Height="50" LastChildFill="False">
                <Button x:Name="AddPatientButton"
                        Content="+ Add Patient"
                        Width="120"
                        Height="36"
                        Margin="10,7"
                        Background="#2196F3"
                        Foreground="White"
                        Click="AddNewPatientButton_Click"
                        DockPanel.Dock="Left"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button x:Name="SettingsButton"
                        Content="⚙ Settings"
                        Width="100"
                        Height="36"
                        Margin="0,7,10,7"
                        Background="#6c757d"
                        Foreground="White"
                        Click="SettingsButton_Click"
                        DockPanel.Dock="Right"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button x:Name="DebugButton"
                        Content="🐛 Debug"
                        Width="100"
                        Height="36"
                        Margin="0,7,5,7"
                        Background="#6c757d"
                        Foreground="White"
                        Click="DebugButton_Click"
                        DockPanel.Dock="Right"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </DockPanel>
            <Grid x:Name="PatientsTabContent"
                  Grid.Row="1"
                  Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0"
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0"
                                 x:Name="TxtPatientSearch"
                                 Padding="8"
                                 FontSize="14"
                                 Text="{Binding PatientSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 Margin="0,0,0,10">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="🔍 Search patients..."
                                                                       Foreground="#999999"
                                                                       FontSize="14"
                                                                       Margin="8,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock Grid.Row="1" Margin="0,0,0,10" FontSize="12" Foreground="#666">
                            <Run Text="Total Patients: "/>
                            <Run Text="{Binding Patients.Count, Mode=OneWay}" Foreground="#2196F3" FontWeight="Bold"/>
                            <Run Text=" | Status: "/>
                            <Run Text="{Binding StatusMessage, Mode=OneWay}" Foreground="#666"/>
                        </TextBlock>
                        <ListBox Grid.Row="2"
                                 x:Name="PatientListBox"
                                 ItemsSource="{Binding FilteredPatients}"
                                 SelectedItem="{Binding SelectedPatient}"
                                 SelectionChanged="PatientListBox_SelectionChanged"
                                 MouseDoubleClick="PatientListBox_MouseDoubleClick"
                                 BorderThickness="2"
                                 BorderBrush="Blue"
                                 Background="LightBlue"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 HorizontalContentAlignment="Right">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5"
                                            Margin="5"
                                            Background="LightBlue"
                                            BorderBrush="Blue"
                                            BorderThickness="2"
                                            HorizontalAlignment="Right">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPaused}" Value="True">
                                                        <Setter Property="BorderBrush" Value="#FF9800"/>
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="▶ Start Visit"
                                                          FontWeight="SemiBold"
                                                          Click="ContextMenu_StartVisit_Click"/>
                                                <Separator/>
                                                <MenuItem Header="✏ Edit Patient"
                                                          Click="ContextMenu_EditPatient_Click"/>
                                                <MenuItem Header="🗑 Delete Patient"
                                                          Foreground="#D32F2F"
                                                          Click="ContextMenu_DeletePatient_Click"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <StackPanel Orientation="Horizontal"
                                                    FlowDirection="RightToLeft"
                                                    HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="Bold"
                                                       FontSize="15"/>
                                            <TextBlock Text=" · "
                                                       Foreground="#AAAAAA"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Phone}"
                                                       FlowDirection="LeftToRight"
                                                       Foreground="#666666"
                                                       FontSize="13"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <ScrollViewer Grid.Column="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="20">
                    <StackPanel>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="40"
                                Margin="0,0,0,20"
                                Visibility="{Binding HasNoSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="👤" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Select a patient to view details"
                                           FontSize="16" Foreground="#999999"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Double-click a patient to start a visit"
                                           FontSize="13" Foreground="#BBBBBB"
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,20"
                                Visibility="{Binding HasSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,15">
                                    <TextBlock Text="👤" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding SelectedPatient.Name, FallbackValue='—'}"
                                                   FontSize="22" FontWeight="Bold" Foreground="#1A1A1A"/>
                                        <TextBlock FontSize="13" Foreground="#888888" Margin="0,3,0,0">
                                            <Run Text="ID #"/>
                                            <Run Text="{Binding SelectedPatient.PatientId, Mode=OneWay, FallbackValue='—'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DockPanel>
                                <Separator Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Date of Birth" Foreground="#888" FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPatient.DateOfBirthDisplay, Mode=OneWay, FallbackValue='—'}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Age" Foreground="#888" FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding SelectedPatient.Age, Mode=OneWay, FallbackValue='—'}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Gender" Foreground="#888" FontSize="12"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPatient.SexDisplay, Mode=OneWay, FallbackValue='—'}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Blood Group" Foreground="#888" FontSize="12"/>
                                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding SelectedPatient.BloodGroup, Mode=OneWay, FallbackValue='—'}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Phone" Foreground="#888" FontSize="12"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedPatient.Phone, Mode=OneWay, FallbackValue='—'}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="4" Grid.Column="2" Text="Allergies" Foreground="#888" FontSize="12"/>
                                    <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding SelectedPatient.Allergies, Mode=OneWay, FallbackValue='—'}" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Visibility="{Binding HasSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Visit History"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#333333"
                                           Margin="0,0,0,15"/>
                                <TextBlock Text="{Binding PatientHistory}"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           Foreground="#666666"
                                           LineHeight="22"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <ScrollViewer x:Name="VisitTabContent"
                          Grid.Row="1"
                          Visibility="Collapsed"
                          VerticalScrollBarVisibility="Auto"
                          Padding="20"
                          PreviewKeyDown="VisitTab_PreviewKeyDown"
                          PreviewMouseWheel="VisitTab_PreviewMouseWheel">
                <StackPanel DataContext="{Binding CurrentVisit, RelativeSource={RelativeSource AncestorType=Window}}">
                    <Border Background="#2196F3"
                            CornerRadius="8"
                            Padding="15"
                            Margin="20,0,20,8">
                        <TextBlock VerticalAlignment="Center" Foreground="White">
                            <Run Text="  Age: " FontSize="14"/>
                            <Run Text="{Binding DataContext.SelectedPatient.Age, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay, FallbackValue='--'}" FontSize="14"/>
                            <Run Text=" | Phone: " FontSize="14"/>
                            <Run Text="{Binding DataContext.SelectedPatient.Phone, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay, FallbackValue='--'}" FontSize="14"/>
                            <Run Text=" | " FontSize="14"/>
                            <Run Text="{Binding DataContext.SelectedPatient.Name, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay, FallbackValue='No Patient Selected'}" FontSize="20" FontWeight="Bold"/>
        
                            
                        </TextBlock>
                    </Border>

                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Temperature (°C)" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtTemperature"
                                         Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="BP Systolic" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtBPS"
                                         Text="{Binding BPSystolic, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="BP Diastolic" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtBPD"
                                         Text="{Binding BPDiastolic, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Weight (kg)" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"
                                         IsEnabled="False"
                                         Background="#F5F5F5"
                                         ToolTip="Weight tracking coming soon"/>
                            </StackPanel>
                        </Grid>

                    </Border>
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Gravida" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtGravida"
                                         Text="{Binding Gravida, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Para" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtPara"
                                         Text="{Binding Para, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Abortion" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtAbortion"
                                         Text="{Binding Abortion, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- ════ Notes card ════ -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="8" Padding="12,8,12,12" Margin="20,0,20,8">
                        <StackPanel>
                            <DockPanel Margin="0,0,0,6">
                                <TextBlock Text="Notes" FontSize="14" FontWeight="Bold"
                                           Foreground="#333" VerticalAlignment="Center"/>
                                <Border x:Name="DictationStatusBadge"
                                        Background="#FFEBEE" CornerRadius="10"
                                        Padding="8,3" Margin="10,0,0,0"
                                        Visibility="Collapsed" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtDictationStatus" Text="🎤 Listening…"
                                               FontSize="11" Foreground="#C62828"/>
                                </Border>
                                <Button x:Name="BtnMic" DockPanel.Dock="Right"
                                        HorizontalAlignment="Right"
                                        Width="32" Height="32" Content="🎤" FontSize="15"
                                        ToolTip="Start / stop voice dictation"
                                        Background="Transparent" BorderBrush="#CCCCCC"
                                        BorderThickness="1" Cursor="Hand" Click="BtnMic_Click"/>
                            </DockPanel>
                            <TextBox x:Name="TxtNotes"
                                     Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     MinHeight="60" Padding="8" FontSize="13"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                    <!-- ════════════ AI DIAGNOSIS SUGGESTIONS ════════════ -->
                    <Border x:Name="AiSuggestionsPanel"
                            Visibility="Collapsed"
                            Background="#F3E5F5"
                            BorderBrush="#CE93D8"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <StackPanel>
                            <!-- Header row -->
                            <DockPanel Margin="0,0,0,10">
                                <TextBlock Text="🧠 AI Diagnosis Assistant" FontSize="16"
                                           FontWeight="Bold" Foreground="#6A1B9A"
                                           VerticalAlignment="Center"/>
                                <!-- Thinking spinner -->
                                <Border x:Name="AiThinkingBadge"
                                        Background="#EDE7F6" CornerRadius="10"
                                        Padding="8,3" Margin="10,0,0,0"
                                        Visibility="{Binding IsAiThinking, Converter={StaticResource BoolToVisibilityConverter}}"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="⏳ Thinking…" FontSize="11" Foreground="#6A1B9A"/>
                                </Border>
                                <!-- Trigger button -->
                                <Button x:Name="BtnAiSuggest"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right"
                                        Height="34" Padding="14,0"
                                        Background="#7B1FA2" Foreground="White"
                                        BorderThickness="0" Cursor="Hand"
                                        FontSize="13" FontWeight="SemiBold"
                                        Content="🧠 Suggest Diagnosis"
                                        IsEnabled="{Binding DataContext.HasSelectedPatient, RelativeSource={RelativeSource AncestorType=Window}}"
                                        ToolTip="Ctrl+D — Send all visit data to AI for differential diagnosis"
                                        Click="BtnAiSuggest_Click"/>
                            </DockPanel>
                            <!-- Suggestions output -->
                            <Border Background="White" CornerRadius="6" Padding="12">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AiSuggestions}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBox Text="{Binding AiSuggestions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="False"
                                         TextWrapping="Wrap"
                                         FontSize="14" FontFamily="Segoe UI"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalScrollBarVisibility="Auto"
                                         MaxHeight="400"
                                         ToolTip="AI-generated differential diagnosis — edit freely before saving"/>
                            </Border>
                            <!-- Empty state hint -->
                            <TextBlock Text="Click 'Suggest Diagnosis' or press Ctrl+D to get AI-assisted differential diagnosis based on all visit data."
                                       FontSize="12" Foreground="#9C4DBE" FontStyle="Italic"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AiSuggestions}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>


                    <!-- ═══════════════════════ LAB RESULTS ═══════════════════════ -->
                    <Border Background="White"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        CornerRadius="8"
        Padding="12,8,12,12"
        Margin="20,0,20,8">
                        <StackPanel>

                            <!-- Header -->
                            <DockPanel Margin="0,0,0,12">
                                <TextBlock Text="🧪 Lab Results"
                                           FontSize="18" FontWeight="Bold" Foreground="#333333"
                                           VerticalAlignment="Center"/>
                                <!-- OCR status badge -->
                                <Border x:Name="OcrStatusBadge"
                                        Background="#E8F5E9" CornerRadius="10"
                                        Padding="8,3" Margin="10,0,0,0"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtOcrStatus"
                                               Text="📷 Saving image…"
                                               FontSize="11" Foreground="#2E7D32"/>
                                </Border>
                                <Button x:Name="BtnAddNewLabTest"
                                        Content="+ New Test to Catalog"
                                        DockPanel.Dock="Right"
                                        Height="32" Padding="12,0"
                                        Background="#00695C" Foreground="White"
                                        BorderThickness="0" Cursor="Hand"
                                        FontSize="12" FontWeight="SemiBold"
                                        Margin="0,0,6,0"
                                        Click="BtnAddNewLabTest_Click"/>
                                <!-- OCR button -->
                                <Button x:Name="BtnOcrLabImage"
                                        Content="🔬 Read Image"
                                        DockPanel.Dock="Right"
                                        Height="32" Padding="12,0"
                                        Background="#1565C0" Foreground="White"
                                        BorderThickness="0" Cursor="Hand"
                                        FontSize="12" FontWeight="SemiBold"
                                        ToolTip="Pick a lab result image — AI will auto-fill the form fields"
                                        Click="BtnOcrLabImage_Click"/>
                            </DockPanel>

                            <!-- Row 1: Test name autocomplete + Result value -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Test name" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <Grid>
                                        <TextBox x:Name="TxtLabTest"
                                                 Text="{Binding LabTestSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="8" FontSize="14"
                                                 TextChanged="TxtLabTest_TextChanged"
                                                 LostFocus="TxtLabTest_LostFocus"/>
                                        <Popup x:Name="LabSuggestPopup"
                                               PlacementTarget="{x:Reference TxtLabTest}"
                                               Placement="Bottom" StaysOpen="False"
                                               Width="{Binding ActualWidth, ElementName=TxtLabTest}">
                                            <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
                                                <ListBox x:Name="LabSuggestList"
                                                         MaxHeight="180"
                                                         SelectionChanged="LabSuggestList_SelectionChanged"
                                                         DisplayMemberPath="TestName"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Result value" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding LabResultValue, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="14"
                                             ToolTip="e.g. 5.2, Positive, Normal"/>
                                </StackPanel>
                            </Grid>

                            <!-- Row 2: Unit dropdown (SI/Imperial) + Normal range (editable) -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Unit  (choose SI / Imperial or type custom)"
                                               FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <ComboBox x:Name="CbLabUnit"
                                              ItemsSource="{Binding LabUnitOptions}"
                                              SelectedItem="{Binding LabSelectedUnitOption}"
                                              IsEditable="True"
                                              Text="{Binding LabResultUnit, UpdateSourceTrigger=PropertyChanged}"
                                              Padding="6,6" FontSize="13"
                                              SelectionChanged="CbLabUnit_SelectionChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock FontSize="11" Foreground="#888" Margin="0,0,0,3">
                                        <Run Text="Normal range"/>
                                        <Run Text=" — auto-filled, editable, saved with visit"
                                             Foreground="#AAAAAA"/>
                                    </TextBlock>
                                    <!-- IsEditable ComboBox: dropdown lists catalog ranges,
                                         doctor can freely type a custom range instead.
                                         Selecting a range also switches the Unit to match. -->
                                    <ComboBox x:Name="CbLabNormalRange"
                                              ItemsSource="{Binding LabNormalRangeOptions}"
                                              IsEditable="True"
                                              Text="{Binding LabNormalRange, UpdateSourceTrigger=PropertyChanged}"
                                              Padding="6,6" FontSize="13"
                                              Background="#FFFDE7"
                                              ToolTip="Pre-filled from catalog — change freely to match your lab kit's reference range"
                                              SelectionChanged="CbLabNormalRange_SelectionChanged"/>
                                </StackPanel>
                            </Grid>

                            <!-- Row 3: Notes + Add button -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Notes" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding LabResultNotes, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="13"
                                             ToolTip="Any additional notes about this result"/>
                                </StackPanel>
                                <Button Grid.Column="2"
                                        Content="+ Add"
                                        Width="80" Height="36"
                                        Margin="0,18,0,0"
                                        Background="#00838F" Foreground="White"
                                        BorderThickness="0" Cursor="Hand"
                                        FontSize="14" FontWeight="SemiBold"
                                        IsEnabled="{Binding CanAddLabItem}"
                                        Click="AddLabResultButton_Click"/>
                            </Grid>

                            <!-- Lab result list -->
                            <ItemsControl x:Name="LabResultList"
                      ItemsSource="{Binding LabResults}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#E0F7FA"
                            BorderBrush="#80DEEA"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10,8"
                            Margin="0,0,0,6">
                                            <StackPanel>
                                                <!-- Top row: test name + result + remove -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#006064">
                                        <Run Text="{Binding TestName}"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="13" Foreground="#333" Margin="0,2,0,0">
                                        <Run Text="{Binding ResultValue}" FontWeight="Bold"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding Unit}" Foreground="#555"/>
                                        <Run Text="  " Foreground="#AAA"/>
                                        <Run Text="Ref: " Foreground="#888" FontSize="11"/>
                                        <Run Text="{Binding NormalRange}" Foreground="#888" FontSize="11"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding Notes}"
                                               FontSize="11" Foreground="#777"
                                               FontStyle="Italic" Margin="0,2,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Notes}" Value="">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <!-- Attach buttons -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                                        <Button Content="📎 Attach"
                                            Height="28" Padding="8,0"
                                            Background="#0097A7" Foreground="White"
                                            BorderThickness="0" Cursor="Hand"
                                            FontSize="11" Margin="0,0,4,0"
                                            Tag="{Binding}"
                                            Click="AttachImageButton_Click"/>
                                                        <Button Content="🖨 Scan"
                                            Height="28" Padding="8,0"
                                            Background="#00796B" Foreground="White"
                                            BorderThickness="0" Cursor="Hand"
                                            FontSize="11"
                                            Tag="{Binding}"
                                            Click="ScanImageButton_Click"/>
                                                    </StackPanel>
                                                    <!-- Remove -->
                                                    <Button Grid.Column="2"
                                        Content="&#xD7;"
                                        Width="28" Height="28"
                                        Background="Transparent"
                                        Foreground="#D32F2F"
                                        FontSize="16" FontWeight="Bold"
                                        BorderThickness="0" Cursor="Hand"
                                        VerticalAlignment="Top" Margin="4,0,0,0"
                                        Tag="{Binding}"
                                        Click="RemoveLabResultButton_Click"/>
                                                </Grid>

                                                <!-- Attachment thumbnails strip -->
                                                <ItemsControl ItemsSource="{Binding Attachments}"
                                          Margin="0,6,0,0">
                                                    <ItemsControl.Style>
                                                        <Style TargetType="ItemsControl">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasAttachments}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ItemsControl.Style>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#B2EBF2" BorderThickness="1"
                                                CornerRadius="4" Margin="0,0,6,0"
                                                Background="White">
                                                                <Grid>
                                                                    <StackPanel>
                                                                        <!-- Image thumbnail -->
                                                                        <Image Source="{Binding Thumbnail}"
                                                           Width="90" Height="70"
                                                           Stretch="UniformToFill"
                                                           Margin="4,4,4,0"
                                                           Cursor="Hand"
                                                           Tag="{Binding FilePath}"
                                                           MouseLeftButtonUp="AttachmentImage_Click">
                                                                            <Image.Style>
                                                                                <Style TargetType="Image">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding IsImage}" Value="False">
                                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Image.Style>
                                                                        </Image>
                                                                        <!-- Non-image file icon -->
                                                                        <TextBlock Text="📄"
                                                               FontSize="36"
                                                               HorizontalAlignment="Center"
                                                               Margin="4,4,4,0"
                                                               Cursor="Hand"
                                                               Tag="{Binding FilePath}"
                                                               MouseLeftButtonUp="AttachmentImage_Click">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding IsImage}" Value="False">
                                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                        <!-- File name -->
                                                                        <TextBlock Text="{Binding FileName}"
                                                               FontSize="10" Foreground="#555"
                                                               MaxWidth="94" TextWrapping="Wrap"
                                                               Margin="4,2,4,4"
                                                               TextAlignment="Center"/>
                                                                    </StackPanel>
                                                                    <!-- remove attachment X -->
                                                                    <Button Content="✕"
                                                        Width="18" Height="18"
                                                        Background="#D32F2F" Foreground="White"
                                                        FontSize="10" BorderThickness="0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Cursor="Hand"
                                                        Tag="{Binding}"
                                                        Click="RemoveAttachmentButton_Click"/>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="No lab results added yet."
                   FontSize="13" Foreground="#BBBBBB"
                   HorizontalAlignment="Center" Margin="0,8">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LabResults.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                        </StackPanel>
                    </Border>
                    <!-- ════════════════ END LAB RESULTS ════════════════ -->
                    
                    <!-- ═══════════════════════ PRESCRIPTION ═══════════════════════ -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <StackPanel>

                            <!-- Header -->
                            <DockPanel Margin="0,0,0,12">
                                <TextBlock Text="&#x1F48A; Prescription"
                                           FontSize="18" FontWeight="Bold" Foreground="#333333"
                                           VerticalAlignment="Center" Margin="0,0,20,0"/>
                                <Button x:Name="BtnAddNewDrug"
                                        Content="+ New Drug to Catalog"
                                        DockPanel.Dock="Right"
                                        Height="32" Padding="12,0"
                                        Background="#9C27B0" Foreground="White"
                                        BorderThickness="0" Cursor="Hand"
                                        FontSize="12" FontWeight="SemiBold"
                                        Margin="8,0,0,0"
                                        Click="BtnAddNewDrug_Click"/>
                                <Button x:Name="BtnPrintPrescription"
                                        Content="🖨 Print Prescription"
                                        DockPanel.Dock="Right"
                                        Height="32" Padding="12,0"
                                        Background="#0277BD" Foreground="White"
                                        BorderThickness="0" Cursor="Hand"
                                        FontSize="12" FontWeight="SemiBold"
                                        Click="BtnPrintPrescription_Click"/>
                            </DockPanel>

                            <!-- Input row 1: Drug autocomplete + Dose -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Drug name" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <Grid>
                                        <TextBox x:Name="TxtRxDrug"
                                                 Text="{Binding RxDrugText, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="8" FontSize="14"
                                                 TextChanged="TxtRxDrug_TextChanged"
                                                 LostFocus="TxtRxDrug_LostFocus"/>
                                        <Popup x:Name="DrugSuggestPopup"
                                               PlacementTarget="{x:Reference TxtRxDrug}"
                                               Placement="Bottom"
                                               StaysOpen="False"
                                               Width="{Binding ActualWidth, ElementName=TxtRxDrug}">
                                            <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
                                                <ListBox x:Name="DrugSuggestList"
                                                         MaxHeight="180"
                                                         SelectionChanged="DrugSuggestList_SelectionChanged"
                                                         DisplayMemberPath="BrandName"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Dose / Strength" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding RxDose, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="14"
                                             ToolTip="e.g. 500 mg, 10 mL"/>
                                </StackPanel>
                            </Grid>

                            <!-- Input row 2: Route + Frequency + Duration -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Route" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding RouteOptions, Mode=OneTime}"
                                              Text="{Binding RxRoute, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="True"
                                              Padding="6,6" FontSize="13"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Frequency" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding FrequencyOptions, Mode=OneTime}"
                                              Text="{Binding RxFrequency, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="True"
                                              Padding="6,6" FontSize="13"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Duration (days)" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding RxDuration, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="13"
                                             ToolTip="e.g. 7, 14, 30"/>
                                </StackPanel>
                            </Grid>

                            <!-- Input row 3: Instructions + Add button -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Instructions / Notes" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding RxInstructions, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="13"
                                             ToolTip="e.g. Take after meals, avoid grapefruit"/>
                                </StackPanel>
                                <Button Grid.Column="2"
                                        Content="+ Add"
                                        Width="80" Height="36"
                                        Margin="0,18,0,0"
                                        Background="#4CAF50" Foreground="White"
                                        BorderThickness="0" Cursor="Hand"
                                        FontSize="14" FontWeight="SemiBold"
                                        IsEnabled="{Binding CanAddPrescription}"
                                        Click="AddPrescriptionButton_Click"/>
                            </Grid>

                            <!-- Prescription list -->
                            <ItemsControl x:Name="PrescriptionList"
                                          ItemsSource="{Binding Prescriptions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F3E5F5"
                                                BorderBrush="#CE93D8"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="10,8"
                                                Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#6A1B9A">
                                                        <Run Text="{Binding DrugName}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding Form}" Foreground="#888" FontSize="12" FontWeight="Normal"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="#555" Margin="0,2,0,0">
                                                        <Run Text="{Binding Dose}" FontWeight="SemiBold"/>
                                                        <Run Text=" · " Foreground="#AAA"/>
                                                        <Run Text="{Binding Route}"/>
                                                        <Run Text=" · " Foreground="#AAA"/>
                                                        <Run Text="{Binding Frequency}"/>
                                                        <Run Text=" · " Foreground="#AAA"/>
                                                        <Run Text="{Binding DurationDays}"/>
                                                        <Run Text=" days" Foreground="#888"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Instructions}"
                                                               FontSize="11" Foreground="#777"
                                                               FontStyle="Italic" Margin="0,2,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Instructions}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Instructions}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Content="&#xD7;"
                                                        Width="28" Height="28"
                                                        Background="Transparent"
                                                        Foreground="#D32F2F"
                                                        FontSize="16" FontWeight="Bold"
                                                        BorderThickness="0" Cursor="Hand"
                                                        VerticalAlignment="Top"
                                                        Tag="{Binding}"
                                                        Click="RemovePrescriptionButton_Click"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="No prescriptions added yet."
                                       FontSize="13" Foreground="#BBBBBB"
                                       HorizontalAlignment="Center" Margin="0,8">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Prescriptions.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                        </StackPanel>
                    </Border>
                    <!-- ════════════════ END PRESCRIPTION ════════════════ -->

                    

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                        <Button Content="💾 Save Visit"
                                Width="150" Height="45"
                                Background="#4CAF50" Foreground="White"
                                FontSize="16" FontWeight="SemiBold" BorderThickness="0"
                                Margin="0,0,10,0" Cursor="Hand"
                                Click="SaveVisitButton_Click"
                                Style="{StaticResource SaveVisitButtonStyle}"/>
                        <Button Content="✅ Complete Visit"
                                Width="150" Height="45"
                                Background="#2196F3" Foreground="White"
                                FontSize="16" FontWeight="SemiBold" BorderThickness="0"
                                Margin="0,0,10,0" Cursor="Hand"
                                Click="CompleteVisitButton_Click"
                                Style="{StaticResource CompleteVisitButtonStyle}"/>
                        <Button Content="⏸ Pause Visit"
                                Width="150" Height="45"
                                Background="#FF9800" Foreground="White"
                                FontSize="16" FontWeight="SemiBold" BorderThickness="0"
                                Margin="0,0,10,0" Cursor="Hand"
                                Click="PauseVisitButton_Click"
                                Style="{StaticResource PauseVisitButtonStyle}"/>
                        <Button Content="📋 Print Summary"
                                Width="160" Height="45"
                                Background="#455A64" Foreground="White"
                                FontSize="15" FontWeight="SemiBold" BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnPrintSummary_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>








