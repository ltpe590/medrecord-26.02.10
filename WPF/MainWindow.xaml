<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:WPF.Helpers"
        mc:Ignorable="d"
        Title="Patient Visit Management"
        Height="700" Width="1100"
        WindowState="Maximized"
        Background="#FAFAFA">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Tab Button Style -->
        <Style x:Key="VerticalTabButton" TargetType="RadioButton">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <StackPanel VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Margin="10">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                          FontSize="32"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                          HorizontalAlignment="Center"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="{TemplateBinding Foreground}"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>  <!-- Vertical Tab Bar -->
            <ColumnDefinition Width="*"/>    <!-- Content Area -->
        </Grid.ColumnDefinitions>

        <!-- VERTICAL TAB BAR (Left Side) -->
        <Grid Grid.Column="0" Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>  <!-- Patients Tab - 50% -->
                <RowDefinition Height="*"/>  <!-- Visit Tab - 50% -->
            </Grid.RowDefinitions>

            <!-- Patients Tab Button -->
            <RadioButton Grid.Row="0"
                        x:Name="PatientsTabButton"
                        Content="Patients"
                        Tag="ðŸ‘¤"
                        Style="{StaticResource VerticalTabButton}"
                        GroupName="MainTabs"
                        IsChecked="True"
                        Checked="PatientsTab_Checked"/>

            <!-- Visit Tab Button -->
            <RadioButton Grid.Row="1"
                        x:Name="VisitTabButton"
                        Content="Visit"
                        Tag="ðŸ“‹"
                        Style="{StaticResource VerticalTabButton}"
                        GroupName="MainTabs"
                        Checked="VisitTab_Checked"/>
        </Grid>

        <!-- CONTENT AREA (Right Side) -->
        <Grid Grid.Column="1" Background="#F5F5F5">
            
            <!-- TOP TOOLBAR -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Background="#FFFFFF" Height="50" LastChildFill="False">
                <Button x:Name="AddPatientButton" 
                       Content="+ Add Patient" 
                       Width="120" 
                       Height="36" 
                       Margin="10,7"
                       Background="#2196F3" 
                       Foreground="White" 
                       Click="AddNewPatientButton_Click" 
                       DockPanel.Dock="Left"
                       BorderThickness="0"
                       Cursor="Hand"/>
                <Button x:Name="SettingsButton" 
                       Content="âš™ Settings" 
                       Width="100" 
                       Height="36" 
                       Margin="0,7,10,7" 
                       Background="#6c757d" 
                       Foreground="White" 
                       Click="SettingsButton_Click" 
                       DockPanel.Dock="Right"
                       BorderThickness="0"
                       Cursor="Hand"/>
                <Button x:Name="DebugButton" 
                       Content="ðŸ› Debug" 
                       Width="100" 
                       Height="36"
                       Margin="0,7,5,7"
                       Background="#6c757d" 
                       Foreground="White"
                       Click="DebugButton_Click" 
                       DockPanel.Dock="Right"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </DockPanel>

            <!-- PATIENTS TAB CONTENT -->
            <Grid x:Name="PatientsTabContent" 
                  Grid.Row="1" 
                  Visibility="Visible">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>  <!-- Patient List - 350px -->
                    <ColumnDefinition Width="*"/>    <!-- Patient Details - Rest -->
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL: PATIENT LIST -->
                <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,0,1,0"
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>  <!-- Search -->
                            <RowDefinition Height="Auto"/>  <!-- Debug count -->
                            <RowDefinition Height="*"/>     <!-- List -->
                        </Grid.RowDefinitions>

                        <!-- SEARCH BOX -->
                        <TextBox Grid.Row="0"
                                x:Name="TxtPatientSearch"
                                Padding="8"
                                FontSize="14"
                                Text="{Binding PatientSearchText, UpdateSourceTrigger=PropertyChanged}"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                Margin="0,0,0,10">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="ðŸ” Search patients..." 
                                                                      Foreground="#999999" 
                                                                      FontSize="14"
                                                                      Margin="8,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- DEBUG: Show patient count -->
                        <TextBlock Grid.Row="1" Margin="0,0,0,10" FontSize="12" Foreground="#666">
                            <Run Text="Total Patients: "/>
                            <Run Text="{Binding Patients.Count, Mode=OneWay}" Foreground="#2196F3" FontWeight="Bold"/>
                            <Run Text=" | Status: "/>
                            <Run Text="{Binding StatusMessage, Mode=OneWay}" Foreground="#666"/>
                        </TextBlock>

                        <!-- PATIENT LIST -->
                        <ListBox Grid.Row="2"
                                x:Name="PatientListBox"
                                ItemsSource="{Binding FilteredPatients}"
                                SelectedItem="{Binding SelectedPatient}"
                                SelectionChanged="PatientListBox_SelectionChanged"
                                MouseDoubleClick="PatientListBox_MouseDoubleClick"
                                BorderThickness="2"
                                BorderBrush="Blue"
                                Background="LightBlue"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10"
                                           Margin="5"
                                           Background="LightBlue"
                                           BorderBrush="Blue"
                                           BorderThickness="2">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="Bold"
                                                      FontSize="16"
                                                      Foreground="Black"/>
                                            <TextBlock Text="{Binding Phone}" 
                                                      FontSize="14"
                                                      Foreground="DarkGray"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- RIGHT PANEL: PATIENT DETAILS -->
                <ScrollViewer Grid.Column="1" 
                             VerticalScrollBarVisibility="Auto"
                             Padding="20">
                    <StackPanel>
                        <!-- PATIENT DETAILS CARD -->
                        <Border Background="White"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="20"
                               Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Patient Details"
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="#333333"
                                          Margin="0,0,0,15"/>
                                
                                <TextBlock Text="{Binding SelectedPatientInfo}"
                                          FontSize="14"
                                          TextWrapping="Wrap"
                                          Foreground="#666666"
                                          LineHeight="22"/>
                            </StackPanel>
                        </Border>

                        <!-- VISIT HISTORY CARD -->
                        <Border Background="White"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="20"
                               Visibility="{Binding HasSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Visit History"
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="#333333"
                                          Margin="0,0,0,15"/>
                                
                                <TextBlock Text="{Binding PatientHistory}"
                                          FontSize="14"
                                          TextWrapping="Wrap"
                                          Foreground="#666666"
                                          LineHeight="22"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- VISIT TAB CONTENT -->
            <ScrollViewer x:Name="VisitTabContent" 
                         Grid.Row="1" 
                         Visibility="Collapsed"
                         VerticalScrollBarVisibility="Auto"
                         Padding="20">
                <StackPanel MaxWidth="1000">
                    
                    <!-- PATIENT INFO HEADER -->
                    <Border Background="#2196F3"
                           CornerRadius="8"
                           Padding="15"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedPatient.Name, Mode=OneWay, FallbackValue='No Patient Selected'}"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                            <TextBlock Foreground="White" FontSize="14" Margin="0,5,0,0">
                                <Run Text="Age: "/>
                                <Run Text="{Binding SelectedPatient.Age, Mode=OneWay, FallbackValue='--'}"/>
                                <Run Text=" | Phone: "/>
                                <Run Text="{Binding SelectedPatient.Phone, Mode=OneWay, FallbackValue='--'}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- VITALS SECTION -->
                    <Border Background="White"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="20"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Vitals"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Temperature -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Temperature (Â°C)" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TxtTemperature"
                                            Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="14"/>
                                </StackPanel>
                                
                                <!-- Blood Pressure Systolic -->
                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="BP Systolic" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TxtBPS"
                                            Text="{Binding BloodPressureSystolic, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="14"/>
                                </StackPanel>
                                
                                <!-- Blood Pressure Diastolic -->
                                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                    <TextBlock Text="BP Diastolic" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TxtBPD"
                                            Text="{Binding BloodPressureDiastolic, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="14"/>
                                </StackPanel>
                                
                                <!-- Weight -->
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Weight (kg)" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- OBSTETRIC INFO (if applicable) -->
                    <Border Background="White"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="20"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Obstetric Information"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Gravida -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Gravida" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TxtGravida"
                                            Text="{Binding Gravida, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="14"/>
                                </StackPanel>
                                
                                <!-- Para -->
                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="Para" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TxtPara"
                                            Text="{Binding Para, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="14"/>
                                </StackPanel>
                                
                                <!-- Abortion -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Abortion" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox x:Name="TxtAbortion"
                                            Text="{Binding Abortion, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- DIAGNOSIS -->
                    <Border Background="White"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="20"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Diagnosis"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,10"/>
                            <TextBox x:Name="TxtDiagnosis"
                                    Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinHeight="80"
                                    Padding="10"
                                    FontSize="14"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                    <!-- NOTES -->
                    <Border Background="White"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="20"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Notes"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,10"/>
                            <TextBox x:Name="TxtNotes"
                                    Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinHeight="100"
                                    Padding="10"
                                    FontSize="14"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                    <!-- ACTION BUTTONS -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                        <Button Content="ðŸ’¾ Save Visit"
                               Width="150"
                               Height="45"
                               Background="#4CAF50"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               BorderThickness="0"
                               Margin="0,0,15,0"
                               Cursor="Hand"
                               Click="SaveVisitButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#45a049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="âœ… Complete Visit"
                               Width="150"
                               Height="45"
                               Background="#2196F3"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               BorderThickness="0"
                               Margin="0,0,15,0"
                               Cursor="Hand"
                               Click="CompleteVisitButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="â¸ Pause Visit"
                               Width="150"
                               Height="45"
                               Background="#FF9800"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="PauseVisitButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F57C00"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>
