<Window x:Class="WPF.Views.AddNewDrugDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Drug to Catalog"
        Width="400" SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">
    <StackPanel Margin="20">

        <TextBlock Text="New Drug Details"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#6A1B9A" Margin="0,0,0,16"/>

        <TextBlock Text="Brand / Generic Name *" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <TextBox x:Name="TxtBrand" Padding="8" FontSize="14" Margin="0,0,0,10"/>

        <TextBlock Text="Form" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <ComboBox x:Name="CbForm" IsEditable="True" Padding="6,6" FontSize="13" Margin="0,0,0,10">
            <ComboBoxItem Content="Tablet"/>
            <ComboBoxItem Content="Capsule"/>
            <ComboBoxItem Content="Syrup"/>
            <ComboBoxItem Content="Injection"/>
            <ComboBoxItem Content="Cream"/>
            <ComboBoxItem Content="Drops"/>
            <ComboBoxItem Content="Inhaler"/>
            <ComboBoxItem Content="Suppository"/>
            <ComboBoxItem Content="Patch"/>
            <ComboBoxItem Content="Solution"/>
        </ComboBox>

        <TextBlock Text="Dosage Strength" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <TextBox x:Name="TxtStrength" Padding="8" FontSize="13"
                 ToolTip="e.g. 500 mg, 250 mg/5 mL" Margin="0,0,0,10"/>

        <TextBlock Text="Route" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <ComboBox x:Name="CbRoute" IsEditable="True" Padding="6,6" FontSize="13" Margin="0,0,0,10">
            <ComboBoxItem Content="Oral"/>
            <ComboBoxItem Content="IV"/>
            <ComboBoxItem Content="IM"/>
            <ComboBoxItem Content="SC"/>
            <ComboBoxItem Content="Topical"/>
            <ComboBoxItem Content="Inhaled"/>
            <ComboBoxItem Content="Sublingual"/>
            <ComboBoxItem Content="Rectal"/>
            <ComboBoxItem Content="Ophthalmic"/>
            <ComboBoxItem Content="Otic"/>
            <ComboBoxItem Content="Nasal"/>
        </ComboBox>

        <TextBlock Text="Frequency" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <ComboBox x:Name="CbFrequency" IsEditable="True" Padding="6,6" FontSize="13" Margin="0,0,0,10">
            <ComboBoxItem Content="Once daily"/>
            <ComboBoxItem Content="Twice daily (BID)"/>
            <ComboBoxItem Content="Three times daily (TID)"/>
            <ComboBoxItem Content="Four times daily (QID)"/>
            <ComboBoxItem Content="Every 8 hours"/>
            <ComboBoxItem Content="Every 12 hours"/>
            <ComboBoxItem Content="At bedtime (QHS)"/>
            <ComboBoxItem Content="As needed (PRN)"/>
        </ComboBox>

        <TextBlock Text="Default Instructions" FontSize="12" Foreground="#555" Margin="0,8,0,4"/>
        <TextBox x:Name="TxtInstructions" Padding="8" FontSize="13"
                 ToolTip="e.g. Take after meals, avoid antacids" Margin="0,0,0,16"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="34" Margin="0,0,10,0"
                    Background="#E0E0E0" Foreground="#333"
                    BorderThickness="0" Cursor="Hand"
                    Click="CancelButton_Click"/>
            <Button Content="Add to Catalog" x:Name="BtnAdd"
                    Width="140" Height="34"
                    Background="#7B1FA2" Foreground="White"
                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"
                    Click="AddButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
