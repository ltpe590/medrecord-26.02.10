<UserControl x:Class="WPF.Views.AppointmentsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left: day calendar + appointment list -->
            <ColumnDefinition Width="2*"/>
            <!-- Right: new appointment form -->
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>

        <!-- ══════════════ LEFT PANE ══════════════ -->
        <DockPanel Grid.Column="0" Margin="20,16,10,16">

            <!-- Date navigator -->
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                <Button Content="◀" Width="32" Style="{StaticResource BtnNeutral}"
                        Click="PrevDay_Click" VerticalAlignment="Center"/>
                <DatePicker x:Name="DayPicker"
                            SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                            Margin="8,0" FontSize="15" FontWeight="SemiBold"
                            VerticalAlignment="Center"/>
                <Button Content="▶" Width="32" Style="{StaticResource BtnNeutral}"
                        Click="NextDay_Click" VerticalAlignment="Center"/>
                <Button Content="Today" Margin="12,0,0,0"
                        Style="{StaticResource BtnPrimary}"
                        Click="Today_Click" VerticalAlignment="Center"/>
                <Button Content="⟳ Refresh" Margin="8,0,0,0"
                        Style="{StaticResource BtnNeutral}"
                        Click="Refresh_Click" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusMessage}"
                           Margin="16,0,0,0" VerticalAlignment="Center"
                           Foreground="{StaticResource AppForeground2}" FontSize="13"/>
            </DockPanel>

            <!-- Loading indicator -->
            <TextBlock DockPanel.Dock="Top"
                       Text="Loading…" FontSize="13"
                       Foreground="{StaticResource AppForeground3}"
                       Margin="0,0,0,8"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>

            <!-- Appointment list -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding DayAppointments}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource AppAccentLight}"
                                    BorderBrush="{DynamicResource AppBorder}"
                                    BorderThickness="1" CornerRadius="8"
                                    Padding="14,10" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Time badge -->
                                    <Border Grid.Column="0"
                                            Background="{StaticResource AppAccent}"
                                            CornerRadius="6" Padding="10,6"
                                            Margin="0,0,14,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ScheduledAt, StringFormat=HH:mm}"
                                                   FontSize="15" FontWeight="Bold"
                                                   Foreground="{StaticResource AppSurface}"/>
                                    </Border>

                                    <!-- Details -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding PatientName}"
                                                   FontSize="15" FontWeight="SemiBold"
                                                   Foreground="{StaticResource AppForeground}"/>
                                        <TextBlock Text="{Binding Reason}"
                                                   FontSize="12" Foreground="{StaticResource AppForeground2}"
                                                   Margin="0,2,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Reason}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Border Background="{StaticResource AppSurface2}"
                                                CornerRadius="4" Padding="6,2"
                                                HorizontalAlignment="Left" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding StatusDisplay}"
                                                       FontSize="11" Foreground="{StaticResource AppForeground2}"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Action buttons -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Content="Arrived"
                                                Style="{StaticResource BtnSuccess}"
                                                Margin="0,0,6,0"
                                                Tag="{Binding}"
                                                Click="MarkArrived_Click"/>
                                        <Button Content="✕ Cancel"
                                                Style="{StaticResource BtnDanger}"
                                                Tag="{Binding}"
                                                Click="CancelAppointment_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>

        <!-- ══════════════ RIGHT PANE — New Appointment Form ══════════════ -->
        <Border Grid.Column="1"
                Background="{DynamicResource AppAccentLight}"
                BorderBrush="{DynamicResource AppBorder}"
                BorderThickness="1,0,0,0"
                Padding="20,16">
            <StackPanel>
                <TextBlock Text="Book Appointment" FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource AppForeground}" Margin="0,0,0,16"/>

                <!-- Patient search -->
                <TextBlock Text="Patient" FontSize="12"
                           Foreground="{StaticResource AppForeground2}" Margin="0,0,0,4"/>
                <Grid>
                    <TextBox x:Name="TxtPatientSearch"
                             Text="{Binding PatientSearchText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8" FontSize="13"
                             TextChanged="TxtPatientSearch_TextChanged"/>
                    <Popup x:Name="PatientSuggestPopup"
                           PlacementTarget="{x:Reference TxtPatientSearch}"
                           Placement="Bottom" StaysOpen="False"
                           Width="{Binding ActualWidth, ElementName=TxtPatientSearch}">
                        <Border Background="{StaticResource AppSurface}"
                                BorderBrush="{StaticResource AppBorderLight}" BorderThickness="1">
                            <ListBox x:Name="PatientSuggestList"
                                     MaxHeight="180"
                                     ItemsSource="{Binding PatientSuggestions}"
                                     DisplayMemberPath="Name"
                                     SelectionChanged="PatientSuggestList_SelectionChanged"/>
                        </Border>
                    </Popup>
                </Grid>

                <!-- Selected patient chip -->
                <Border Margin="0,6,0,12"
                        Background="{StaticResource AppSurface2}"
                        CornerRadius="4" Padding="8,4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding NewApptPatient}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock FontSize="12" Foreground="{StaticResource AppForeground}">
                        <Run Text="✓ "/>
                        <Run Text="{Binding NewApptPatient.Name}" FontWeight="SemiBold"/>
                    </TextBlock>
                </Border>

                <!-- Date -->
                <TextBlock Text="Date" FontSize="12"
                           Foreground="{StaticResource AppForeground2}" Margin="0,0,0,4"/>
                <DatePicker SelectedDate="{Binding NewApptDate, Mode=TwoWay}"
                            Padding="8,6" FontSize="13" Margin="0,0,0,12"/>

                <!-- Time -->
                <TextBlock Text="Time (HH:mm)" FontSize="12"
                           Foreground="{StaticResource AppForeground2}" Margin="0,0,0,4"/>
                <TextBox Text="{Binding NewApptTimeText, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8" FontSize="13" Margin="0,0,0,12"
                         ToolTip="24-hour format, e.g. 09:30 or 14:00"/>

                <!-- Reason -->
                <TextBlock Text="Reason (optional)" FontSize="12"
                           Foreground="{StaticResource AppForeground2}" Margin="0,0,0,4"/>
                <TextBox Text="{Binding NewApptReason, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8" FontSize="13" Margin="0,0,0,16"
                         TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>

                <Button Content="📅 Book Appointment"
                        Style="{StaticResource BtnPrimary}"
                        IsEnabled="{Binding CanAddAppointment}"
                        Click="BookAppointment_Click"
                        HorizontalAlignment="Stretch"
                        Padding="0,10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
