<Window x:Class="WPF.Views.PrintVisitSummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visit Summary â€“ Preview"
        Width="950" Height="820"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="#ECEFF1"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Background="#263238" Padding="16,10">
            <Grid>
                <TextBlock Text="ðŸ“‹  Visit Summary Preview  (A4)"
                           Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Text="Read-only preview â€” click Print to send to printer"
                           Foreground="#90A4AE" FontSize="11"
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- DocumentViewer fills remaining space -->
        <Border Grid.Row="1" Background="#78909C">
            <DocumentViewer x:Name="DocViewer" Background="#78909C"/>
        </Border>

        <!-- Action bar -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0" Padding="16,10">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="BtnClose" Content="âœ•  Close"
                        Height="38" Padding="18,0"
                        FontSize="13" FontWeight="SemiBold" BorderThickness="0"
                        Background="#ECEFF1" Foreground="#333" Cursor="Hand"
                        Margin="0,0,8,0" Click="BtnClose_Click"/>
                <Button x:Name="BtnPrint" Content="ðŸ–¨  Print"
                        Height="38" Padding="18,0"
                        FontSize="13" FontWeight="SemiBold" BorderThickness="0"
                        Background="#1565C0" Foreground="White" Cursor="Hand"
                        Click="BtnPrint_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
