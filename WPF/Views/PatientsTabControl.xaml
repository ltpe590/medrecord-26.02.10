<UserControl x:Class="WPF.Views.PatientsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="280"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="{StaticResource AppSurface}" BorderBrush="{StaticResource AppBorder}" BorderThickness="0,0,1,0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" x:Name="TxtPatientSearch" Padding="8" FontSize="14"
                         Text="{Binding PatientSearchText, UpdateSourceTrigger=PropertyChanged}"
                         BorderBrush="{StaticResource AppBorderLight}" BorderThickness="1" Margin="0,0,0,10">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="&#x1F50D; Search patients..." Foreground="{StaticResource AppForeground3}" FontSize="14" Margin="8,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Grid.Row="1" Margin="0,0,0,10" FontSize="12" Foreground="{StaticResource AppForeground2}">
                    <Run Text="Total Patients: "/>
                    <Run Text="{Binding Patients.Count, Mode=OneWay}" Foreground="{StaticResource AppAccent}" FontWeight="Bold"/>
                    <Run Text=" | Status: "/>
                    <Run Text="{Binding StatusMessage, Mode=OneWay}" Foreground="{StaticResource AppForeground2}"/>
                </TextBlock>
                <ListBox Grid.Row="2" x:Name="PatientListBox"
                         ItemsSource="{Binding FilteredPatients}" SelectedItem="{Binding SelectedPatient}"
                         SelectionChanged="PatientListBox_SelectionChanged" MouseDoubleClick="PatientListBox_MouseDoubleClick"
                         BorderThickness="2" BorderBrush="{StaticResource AppBorder}" Background="{StaticResource AppSelected}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Right">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5" Margin="5" Background="{StaticResource AppSelected}"
                                    BorderBrush="{StaticResource AppBorder}" BorderThickness="2" HorizontalAlignment="Right">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPaused}" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource AppWarning}"/>
                                                <Setter Property="Background" Value="{StaticResource AppWarningLight}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="&#x25B6; Start Visit" FontWeight="SemiBold" Click="ContextMenu_StartVisit_Click"/>
                                        <Separator/>
                                        <MenuItem Header="&#x270F; Edit Patient" Click="ContextMenu_EditPatient_Click"/>
                                        <MenuItem Header="&#x1F5D1; Delete Patient" Foreground="{StaticResource AppDanger}" Click="ContextMenu_DeletePatient_Click"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15"/>
                                    <TextBlock Text=" · " Foreground="{StaticResource AppForeground4}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Phone}" FlowDirection="LeftToRight" Foreground="{StaticResource AppForeground2}" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <Border Background="{StaticResource AppSurface}" BorderBrush="{StaticResource AppBorder}" BorderThickness="1"
                        CornerRadius="8" Padding="40" Margin="0,0,0,20"
                        Visibility="{Binding HasNoSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F464;" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Select a patient to view details" FontSize="16" Foreground="{StaticResource AppForeground3}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Double-click a patient to start a visit" FontSize="13" Foreground="{StaticResource AppForeground4}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="{StaticResource AppSurface}" BorderBrush="{StaticResource AppBorder}" BorderThickness="1"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20"
                        Visibility="{Binding HasSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,15">
                            <TextBlock Text="&#x1F464;" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedPatient.Name, FallbackValue='&#x2014;'}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AppForeground}"/>
                                <TextBlock FontSize="13" Foreground="{StaticResource AppForeground3}" Margin="0,3,0,0">
                                    <Run Text="ID #"/>
                                    <Run Text="{Binding SelectedPatient.PatientId, Mode=OneWay, FallbackValue='&#x2014;'}"/>
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>
                        <Separator Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="110"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" MinWidth="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Date of Birth" Foreground="{StaticResource AppForeground3}" FontSize="12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPatient.DateOfBirthDisplay, Mode=OneWay, FallbackValue='&#x2014;'}" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Age" Foreground="{StaticResource AppForeground3}" FontSize="12"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding SelectedPatient.Age, Mode=OneWay, FallbackValue='&#x2014;'}" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Gender" Foreground="{StaticResource AppForeground3}" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPatient.SexDisplay, Mode=OneWay, FallbackValue='&#x2014;'}" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Blood Group" Foreground="{StaticResource AppForeground3}" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding SelectedPatient.BloodGroup, Mode=OneWay, FallbackValue='&#x2014;'}" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Phone" Foreground="{StaticResource AppForeground3}" FontSize="12"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedPatient.Phone, Mode=OneWay, FallbackValue='&#x2014;'}" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="4" Grid.Column="2" Text="Allergies" Foreground="{StaticResource AppForeground3}" FontSize="12"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding SelectedPatient.Allergies, Mode=OneWay, FallbackValue='&#x2014;'}" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Background="{StaticResource AppSurface}" BorderBrush="{StaticResource AppBorder}" BorderThickness="1"
                        CornerRadius="8" Padding="20"
                        Visibility="{Binding HasSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Visit History" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AppForeground}" Margin="0,0,0,15"/>
                        <TextBlock Text="{Binding PatientHistory}" FontSize="14" TextWrapping="Wrap" Foreground="{StaticResource AppForeground2}" LineHeight="22"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>