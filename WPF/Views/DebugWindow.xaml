<Window x:Class="WPF.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Logs" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Refresh" Click="RefreshButton_Click"/>
            <Button Content="Clear" Click="ClearButton_Click"/>
            <Button Content="Save to File" Click="SaveButton_Click"/>
            <CheckBox Content="Auto-refresh" IsChecked="{Binding AutoRefresh}" Margin="10,0,0,0"/>
            <CheckBox Content="Debug Enabled" IsChecked="{Binding DebugEnabled}" Margin="10,0,0,0"/>
        </ToolBar>

        <!-- Logs Display -->
        <TextBox x:Name="LogTextBox" 
                 IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 TextWrapping="NoWrap"/>
    </DockPanel>
</Window>