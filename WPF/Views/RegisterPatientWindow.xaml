<Window x:Class="WPF.Views.RegisterPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:WPF.Converters"
        mc:Ignorable="d"
        Title="Register New Patient"
        Height="550" Width="400"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibility"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="New Patient" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <Label Content="Patient Name *"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding [Name]}" Foreground="Red" FontSize="11"
                           Visibility="{Binding [Name], Converter={StaticResource StringToVisibility}}"/>

                <Label Content="Date of Birth *"/>
                <DatePicker SelectedDate="{Binding DateOfBirth}" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding [DateOfBirth]}" Foreground="Red" FontSize="11"
                           Visibility="{Binding [DateOfBirth], Converter={StaticResource StringToVisibility}}"/>

                <Label Content="Gender"/>
                <ComboBox SelectedItem="{Binding Sex}" Margin="0,0,0,10">
                    <ComboBoxItem>Male</ComboBoxItem>
                    <ComboBoxItem>Female</ComboBoxItem>
                </ComboBox>

                <Label Content="Contact Number"/>
                <TextBox Text="{Binding PhoneNumber}"/>

                <Label Content="Address"/>
                <TextBox Text="{Binding Address}" TextWrapping="Wrap" AcceptsReturn="True"/>

                <Label Content="Blood Group"/>
                <ComboBox ItemsSource="{Binding BloodGroups}" SelectedItem="{Binding BloodGroup}" Margin="0,0,0,10"/>

                <Label Content="Allergies"/>
                <TextBox Text="{Binding Allergies}" Height="50" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="80" Height="30" Margin="0,0,10,0"
                    Background="#0078D4" Foreground="White"
                    Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Height="30"
                    Background="#6c757d" Foreground="White"
                    Click="CancelButton_Click"/>
            <Button Content="Save and Start Visit"
                    Width="120" Height="30" Margin="10,0,10,0"
                    Background="#28a745" Foreground="White"
                    Click="SaveAndStartVisitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
