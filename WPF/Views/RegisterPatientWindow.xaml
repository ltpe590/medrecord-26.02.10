<Window x:Class="WPF.Views.RegisterPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:WPF.Converters"
        mc:Ignorable="d"
        Title="Register New Patient"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibility" />
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="6"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#2196F3" BorderThickness="2" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" 
                   Background="#2196F3" 
                   CornerRadius="6,6,0,0"
                   Padding="25,20">
                <StackPanel>
                    <TextBlock Text="âž• New Patient Registration"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock Text="Enter patient information below"
                              FontSize="13"
                              Foreground="#E3F2FD"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- FORM CONTENT -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="25,20"
                         Background="White">
                <StackPanel>
                    
                    <!-- BASIC INFORMATION SECTION -->
                    <TextBlock Text="Basic Information"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="#2196F3"
                              Margin="0,0,0,15"/>

                    <!-- Patient Name -->
                    <TextBlock Text="Patient Name *" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource ModernTextBox}"/>
                    <TextBlock Text="{Binding [Name]}" 
                              Foreground="#F44336" 
                              FontSize="12"
                              Margin="0,-10,0,5"
                              Visibility="{Binding [Name], Converter={StaticResource StringToVisibility}}" />

                    <!-- Date of Birth -->
                    <TextBlock Text="Date of Birth *" Style="{StaticResource ModernLabel}"/>
                    <DatePicker SelectedDate="{Binding DateOfBirth}" 
                               Height="42"
                               FontSize="14"
                               Margin="0,5,0,15"/>
                    <TextBlock Text="{Binding [DateOfBirth]}" 
                              Foreground="#F44336" 
                              FontSize="12"
                              Margin="0,-10,0,5"
                              Visibility="{Binding [DateOfBirth], Converter={StaticResource StringToVisibility}}" />

                    <!-- Gender -->
                    <TextBlock Text="Gender" Style="{StaticResource ModernLabel}"/>
                    <ComboBox SelectedItem="{Binding Sex}" 
                             Height="42"
                             FontSize="14"
                             Margin="0,5,0,15">
                        <ComboBoxItem>Male</ComboBoxItem>
                        <ComboBoxItem>Female</ComboBoxItem>
                    </ComboBox>

                    <!-- CONTACT INFORMATION SECTION -->
                    <TextBlock Text="Contact Information"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="#2196F3"
                              Margin="0,20,0,15"/>

                    <!-- Contact Number -->
                    <TextBlock Text="Contact Number" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding PhoneNumber}" 
                            Style="{StaticResource ModernTextBox}"/>

                    <!-- Address -->
                    <TextBlock Text="Address" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding Address}" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True"
                            MinHeight="70"
                            Style="{StaticResource ModernTextBox}"/>

                    <!-- MEDICAL INFORMATION SECTION -->
                    <TextBlock Text="Medical Information"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="#2196F3"
                              Margin="0,20,0,15"/>

                    <!-- Blood Group -->
                    <TextBlock Text="Blood Group" Style="{StaticResource ModernLabel}"/>
                    <ComboBox ItemsSource="{Binding BloodGroups}" 
                             SelectedItem="{Binding BloodGroup}"
                             Height="42"
                             FontSize="14"
                             Margin="0,5,0,15"/>

                    <!-- Allergies -->
                    <TextBlock Text="Allergies" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding Allergies}" 
                            MinHeight="70"
                            TextWrapping="Wrap" 
                            AcceptsReturn="True"
                            Style="{StaticResource ModernTextBox}"/>
                    
                </StackPanel>
            </ScrollViewer>

            <!-- ACTION BUTTONS -->
            <Border Grid.Row="2" 
                   Background="#FAFAFA" 
                   BorderBrush="#E0E0E0"
                   BorderThickness="0,1,0,0"
                   Padding="25,20"
                   CornerRadius="0,0,6,6">
                <StackPanel>
                    <!-- Primary Actions -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Save Button -->
                        <Button Grid.Column="0"
                               Content="ðŸ’¾ Save Patient"
                               Background="#4CAF50"
                               Foreground="White"
                               Style="{StaticResource ModernButton}"
                               Click="SaveButton_Click"/>

                        <!-- Save and Start Visit Button -->
                        <Button Grid.Column="2"
                               Content="âœ… Save &amp; Start Visit"
                               Background="#2196F3"
                               Foreground="White"
                               Style="{StaticResource ModernButton}"
                               Click="SaveAndStartVisitButton_Click"/>
                    </Grid>

                    <!-- Cancel Button -->
                    <Button Content="Cancel"
                           Background="#6C757D"
                           Foreground="White"
                           Style="{StaticResource ModernButton}"
                           Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
