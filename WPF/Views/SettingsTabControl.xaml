<UserControl x:Class="WPF.Views.SettingsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:WPF.Views"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- All settings panels + internal tab bar live in the shared control -->
        <views:SettingsContentControl x:Name="SettingsContent" Grid.Row="0"/>

        <!-- Inline save bar — no dialog close, just persists and shows status -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <DockPanel>
                <TextBlock x:Name="TxtSaveStatus"
                           Text=""
                           VerticalAlignment="Center"
                           Foreground="#4CAF50"
                           FontSize="13"
                           DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                    <Button Content="↺ Discard"
                            Width="90" Height="34"
                            Margin="0,0,10,0"
                            Background="#9E9E9E" Foreground="White"
                            BorderThickness="0" Cursor="Hand" FontSize="13"
                            Click="DiscardButton_Click"/>
                    <Button Content="💾 Save"
                            Width="90" Height="34"
                            Background="#2196F3" Foreground="White"
                            BorderThickness="0" Cursor="Hand" FontSize="13" FontWeight="SemiBold"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
