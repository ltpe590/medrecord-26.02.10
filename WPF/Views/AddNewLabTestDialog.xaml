<Window x:Class="WPF.Views.AddNewLabTestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Lab Test to Catalog"
        Width="440" SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">
    <StackPanel Margin="20">

        <TextBlock Text="New Lab Test"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#006064" Margin="0,0,0,16"/>

        <TextBlock Text="Test Name *" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <TextBox x:Name="TxtTestName" Padding="8" FontSize="14" Margin="0,0,0,12"/>

        <!-- SI Unit row -->
        <TextBlock Text="SI Unit" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <Grid Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxtUnitSI" Grid.Column="0" Padding="8" FontSize="13"
                     ToolTip="e.g. mmol/L, Âµmol/L"/>
            <TextBox x:Name="TxtRangeSI" Grid.Column="2" Padding="8" FontSize="13"
                     ToolTip="Normal range in SI units e.g. 3.9-6.1"/>
        </Grid>
        <TextBlock Text="unit                               normal range" 
                   FontSize="10" Foreground="#999" Margin="0,0,0,10"/>

        <!-- Imperial Unit row -->
        <TextBlock Text="Imperial / Conventional Unit" FontSize="12" Foreground="#555" Margin="0,0,0,4"/>
        <Grid Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxtUnitImp" Grid.Column="0" Padding="8" FontSize="13"
                     ToolTip="e.g. mg/dL, IU/L"/>
            <TextBox x:Name="TxtRangeImp" Grid.Column="2" Padding="8" FontSize="13"
                     ToolTip="Normal range in imperial units e.g. 70-100"/>
        </Grid>
        <TextBlock Text="unit                               normal range"
                   FontSize="10" Foreground="#999" Margin="0,0,0,16"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="34" Margin="0,0,10,0"
                    Background="#E0E0E0" Foreground="#333"
                    BorderThickness="0" Cursor="Hand"
                    Click="BtnCancel_Click"/>
            <Button Content="Add to Catalog" x:Name="BtnAdd"
                    Width="140" Height="34"
                    Background="#00838F" Foreground="White"
                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"
                    Click="BtnAdd_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
