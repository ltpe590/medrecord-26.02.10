<Window x:Class="WPF.Views.PrintPrescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Prescription â€“ Preview"
        Width="1100" Height="820"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterOwner"
        Background="#ECEFF1"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="Label" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="Field" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- top bar -->
            <RowDefinition Height="*"/>      <!-- main content -->
            <RowDefinition Height="Auto"/>   <!-- action bar -->
        </Grid.RowDefinitions>

        <!-- â•â• Top bar â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="#263238" Padding="16,10">
            <Grid>
                <TextBlock Text="ðŸ–¨  Prescription Preview"
                           Foreground="White" FontSize="14" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Edit on the left â€” preview updates instantly on the right"
                           Foreground="#90A4AE" FontSize="11"
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- â•â• Main: Edit (left) + Preview (right) â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340" MinWidth="280"/>
                <ColumnDefinition Width="5"/>       <!-- splitter -->
                <ColumnDefinition Width="*"/>       <!-- preview -->
            </Grid.ColumnDefinitions>

            <!-- â”€â”€ Edit panel â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto"
                          Background="White">
                <StackPanel Margin="16,12,16,16">

                    <TextBlock Text="CLINIC / DOCTOR" Style="{StaticResource Label}"
                               Margin="0,0,0,6" FontSize="11" Foreground="#1565C0"/>

                    <TextBlock Text="Clinic name" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtClinicName" Style="{StaticResource Field}"
                             TextChanged="EditField_Changed"/>

                    <TextBlock Text="Doctor title &amp; specialty" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtDoctorTitle" Style="{StaticResource Field}"
                             TextChanged="EditField_Changed"/>

                    <TextBlock Text="Phone / address" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtClinicPhone" Style="{StaticResource Field}"
                             TextChanged="EditField_Changed"/>

                    <Separator Margin="0,14,0,0" Background="#E0E0E0"/>
                    <TextBlock Text="PATIENT" Style="{StaticResource Label}"
                               Margin="0,6,0,6" FontSize="11" Foreground="#1565C0"/>

                    <TextBlock Text="Patient name" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtPatientName" Style="{StaticResource Field}"
                             TextChanged="EditField_Changed"/>

                    <TextBlock Text="Age / sex" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtPatientAge" Style="{StaticResource Field}"
                             TextChanged="EditField_Changed"/>

                    <TextBlock Text="Diagnosis" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtDiagnosis" Style="{StaticResource Field}"
                             TextWrapping="Wrap" AcceptsReturn="True" MinHeight="48"
                             TextChanged="EditField_Changed"/>

                    <Separator Margin="0,14,0,0" Background="#E0E0E0"/>
                    <TextBlock Text="MEDICATIONS" Style="{StaticResource Label}"
                               Margin="0,6,0,6" FontSize="11" Foreground="#1565C0"/>

                    <!-- Drug rows -->
                    <ItemsControl x:Name="RxEditControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E3F2FD" BorderThickness="0,0,0,2"
                                        Margin="0,0,0,10" Padding="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="28"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBox Text="{Binding DrugName, UpdateSourceTrigger=PropertyChanged}"
                                                     FontSize="13" FontWeight="SemiBold" Foreground="#1A237E"
                                                     Padding="4,3" BorderBrush="#BDBDBD" BorderThickness="1"
                                                     Margin="0,0,0,3" ToolTip="Drug name"
                                                     TextChanged="RxField_Changed"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Margin="0,0,3,3"
                                                         Text="{Binding Dose, UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="11" Padding="4,3"
                                                         BorderBrush="#BDBDBD" BorderThickness="1"
                                                         ToolTip="Dose / strength"
                                                         TextChanged="RxField_Changed"/>
                                                <TextBox Grid.Column="1"
                                                         Text="{Binding Form, UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="11" Padding="4,3"
                                                         BorderBrush="#BDBDBD" BorderThickness="1"
                                                         ToolTip="Form (tablet, capsuleâ€¦)"
                                                         TextChanged="RxField_Changed"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Margin="0,0,3,0"
                                                         Text="{Binding Route, UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="11" Padding="4,3"
                                                         BorderBrush="#BDBDBD" BorderThickness="1"
                                                         ToolTip="Route"
                                                         TextChanged="RxField_Changed"/>
                                                <TextBox Grid.Column="1"
                                                         Text="{Binding Frequency, UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="11" Padding="4,3"
                                                         BorderBrush="#BDBDBD" BorderThickness="1"
                                                         ToolTip="Frequency"
                                                         TextChanged="RxField_Changed"/>
                                            </Grid>
                                            <Grid Margin="0,0,0,3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Width="70" Margin="0,0,3,0"
                                                         Text="{Binding DurationDays, UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="11" Padding="4,3"
                                                         BorderBrush="#BDBDBD" BorderThickness="1"
                                                         ToolTip="Duration (days)"
                                                         TextChanged="RxField_Changed"/>
                                                <TextBox Grid.Column="1"
                                                         Text="{Binding Instructions, UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="11" Padding="4,3"
                                                         BorderBrush="#BDBDBD" BorderThickness="1"
                                                         ToolTip="Instructions / notes"
                                                         TextChanged="RxField_Changed"/>
                                            </Grid>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="âœ•"
                                                Background="Transparent" Foreground="#D32F2F"
                                                FontSize="13" FontWeight="Bold"
                                                BorderThickness="0" Cursor="Hand"
                                                VerticalAlignment="Top" Margin="4,2,0,0"
                                                Tag="{Binding}"
                                                Click="RemoveRxLine_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Separator Margin="0,4,0,0" Background="#E0E0E0"/>
                    <TextBlock Text="FOOTER" Style="{StaticResource Label}"
                               Margin="0,6,0,6" FontSize="11" Foreground="#1565C0"/>

                    <TextBlock Text="Notes for patient" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtFooterNotes" Style="{StaticResource Field}"
                             TextWrapping="Wrap" AcceptsReturn="True" MinHeight="40"
                             TextChanged="EditField_Changed"/>

                    <TextBlock Text="Signature / doctor name" Style="{StaticResource Label}"/>
                    <TextBox x:Name="TxtSignatureName" Style="{StaticResource Field}"
                             TextChanged="EditField_Changed"/>

                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1" Width="5"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="#CFD8DC" Cursor="SizeWE"/>

            <!-- â”€â”€ Live print preview â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Grid.Column="2" Background="#78909C">
                <DocumentViewer x:Name="DocViewer"
                                Background="#78909C"
                                Foreground="White"/>
            </Border>
        </Grid>

        <!-- â•â• Action bar â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0" Padding="16,10">
            <Grid>
                <TextBlock x:Name="TxtStatus"
                           Foreground="#607D8B" FontSize="12" VerticalAlignment="Center"
                           Text="Edit the prescription on the left, then print or save."/>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button x:Name="BtnCancel" Content="âœ•  Cancel"
                            Style="{StaticResource Btn}"
                            Background="#ECEFF1" Foreground="#333"
                            Margin="0,0,8,0" Click="BtnCancel_Click"/>
                    <Button x:Name="BtnSave" Content="ðŸ’¾  Save as Text"
                            Style="{StaticResource Btn}"
                            Background="#1976D2" Foreground="White"
                            Margin="0,0,8,0" Click="BtnSave_Click"/>
                    <Button x:Name="BtnPrint" Content="ðŸ–¨  Print"
                            Style="{StaticResource Btn}"
                            Background="#2E7D32" Foreground="White"
                            Click="BtnPrint_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
