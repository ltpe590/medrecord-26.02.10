<UserControl x:Class="WPF.Views.VisitTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="RoundedButtonTemplate" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Main container now uses the darker/bluer resource -->
                        <Border Background="{DynamicResource AppAccentDark}"
            CornerRadius="8"
            Padding="{TemplateBinding Padding}">

                            <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>


                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SaveVisitButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonTemplate}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AppSuccess}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CompleteVisitButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonTemplate}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AppAccentDark}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PauseVisitButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonTemplate}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AppWarning}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer x:Name="MainScroller" VerticalScrollBarVisibility="Auto"
                  Padding="20" Background="{DynamicResource AppBackground3}"
                  PreviewKeyDown="VisitTab_PreviewKeyDown"
                  PreviewMouseWheel="VisitTab_PreviewMouseWheel">
        <StackPanel>
            <Border Background="{DynamicResource AppAccent}"
                            CornerRadius="8"
                            Padding="15"
                            Margin="20,0,20,8">
                <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource AppForeground}">
                            <Run Text="{Binding SelectedPatient.Name, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay, FallbackValue='No Patient Selected'}" FontSize="20" FontWeight="Bold"/>
                            <Run Text=" | " FontSize="20" FontWeight="Bold"/>
                            <Run Text="  Age: " FontSize="14"/>
                            <Run Text="{Binding SelectedPatient.Age, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay, FallbackValue='--'}" FontSize="14"/>
                            <Run Text=" | Phone: " FontSize="14"/>
                            <Run Text="{Binding SelectedPatient.Phone, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay, FallbackValue='--'}" FontSize="14"/>

        
                            
                        </TextBlock>
                    </Border>

            <Border Background="{DynamicResource AppAccentLight}"
                            BorderBrush="{DynamicResource AppBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Temperature (°C)" FontSize="12" Foreground="{DynamicResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtTemperature"
                                         Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="BP Systolic" FontSize="12" Foreground="{DynamicResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtBPS"
                                         Text="{Binding BPSystolic, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="BP Diastolic" FontSize="12" Foreground="{DynamicResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtBPD"
                                         Text="{Binding BPDiastolic, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Margin="0,0,10,0">
                        <TextBlock Text="Weight (kg)" FontSize="12" Foreground="{DynamicResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" Margin="0,0,10,0">
                        <TextBlock Text="Height (cm)" FontSize="12" Foreground="{DynamicResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8" FontSize="14"/>
                            </StackPanel>

                            <!-- BMI — read-only, computed by Core.Helpers.BmiCalculator -->
                            <StackPanel Grid.Column="5">
                                <TextBlock Text="BMI" FontSize="12" Foreground="{StaticResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding BmiDisplay, Mode=OneWay}"
                                         Padding="8" FontSize="13"
                                         IsReadOnly="True"
                                         Background="{StaticResource AppSurface2}"
                                         FontWeight="SemiBold"
                                         ToolTip="Calculated automatically from weight and height"/>
                            </StackPanel>
                        </Grid>

                    </Border>
            <Border Background="{DynamicResource AppAccentLight}"
                            BorderBrush="{DynamicResource AppBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Gravida" FontSize="12" Foreground="{StaticResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtGravida"
                                         Text="{Binding Gravida, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Para" FontSize="12" Foreground="{StaticResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtPara"
                                         Text="{Binding Para, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Abortion" FontSize="12" Foreground="{StaticResource AppForeground8}" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtAbortion"
                                         Text="{Binding Abortion, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8"
                                         FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- ════ Presenting Symptoms card ════ -->
                    <Border Background="{DynamicResource AppAccentLight}" BorderBrush="{StaticResource AppBorder}" BorderThickness="1"
                            CornerRadius="8" Padding="12,8,12,12" Margin="20,0,20,8">
                        <StackPanel>
                            <TextBlock Text="Presenting Symptoms" FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource AppForeground}" Margin="0,0,0,6"/>
                            <TextBox x:Name="TxtPresentingSymptoms"
                                     Text="{Binding PresentingSymptoms, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     MinHeight="60" Padding="8" FontSize="13"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                    <!-- ════ Diagnosis card ════ -->
                    <Border Background="{DynamicResource AppAccentLight}" BorderBrush="{StaticResource AppBorder}" BorderThickness="1"
                            CornerRadius="8" Padding="12,8,12,12" Margin="20,0,20,8">
                        <StackPanel>
                            <TextBlock Text="Diagnosis *" FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource AppForeground}" Margin="0,0,0,6"/>
                            <TextBox x:Name="TxtDiagnosis"
                                     Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     MinHeight="60" Padding="8" FontSize="13"
                                     VerticalScrollBarVisibility="Auto"
                                     ToolTip="Required before saving or completing a visit"/>
                        </StackPanel>
                    </Border>
                    <!-- ════ Notes card ════ -->
                    <Border Background="{DynamicResource AppAccentLight}" BorderBrush="{StaticResource AppBorder}" BorderThickness="1"
                            CornerRadius="8" Padding="12,8,12,12" Margin="20,0,20,8">
                        <StackPanel>
                            <DockPanel Margin="0,0,0,6">
                                <TextBlock Text="Notes" FontSize="14" FontWeight="Bold"
                                           Foreground="{StaticResource AppForeground}" VerticalAlignment="Center"/>
                                <Border x:Name="DictationStatusBadge"
                                        Background="{StaticResource AppDangerLight}" CornerRadius="10"
                                        Padding="8,3" Margin="10,0,0,0"
                                        Visibility="Collapsed" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtDictationStatus" Text="🎤 Listening…"
                                               FontSize="11" Foreground="{StaticResource AppDanger}"/>
                                </Border>
                                <Button x:Name="BtnMic" DockPanel.Dock="Right" HorizontalAlignment="Right" Content="🎤" ToolTip="Start / stop voice dictation" Style="{StaticResource BtnIcon}" Click="BtnMic_Click"/>
                            </DockPanel>
                            <TextBox x:Name="TxtNotes"
                                     Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     MinHeight="60" Padding="8" FontSize="13"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                    <!-- ════════════ AI DIAGNOSIS SUGGESTIONS ════════════ -->
                    <Border x:Name="AiSuggestionsPanel"
                            Visibility="Collapsed"
                            Background="{StaticResource AppAiLight}"
                            BorderBrush="{StaticResource AppAiBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <StackPanel>
                            <!-- Header row -->
                            <DockPanel Margin="0,0,0,10">
                                <TextBlock Text="🧠 AI Diagnosis Assistant" FontSize="16"
                                           FontWeight="Bold" Foreground="{StaticResource AppAiText}"
                                           VerticalAlignment="Center"/>
                                <!-- Thinking spinner -->
                                <Border x:Name="AiThinkingBadge"
                                        Background="{StaticResource AppAiLighter}" CornerRadius="10"
                                        Padding="8,3" Margin="10,0,0,0"
                                        Visibility="{Binding IsAiThinking, Converter={StaticResource BoolToVisibilityConverter}}"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="⏳ Thinking…" FontSize="11" Foreground="{StaticResource AppAiText}"/>
                                </Border>
                                <!-- Trigger button -->
                                <Button x:Name="BtnAiSuggest"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right"
                                         Content="🧠 Suggest Diagnosis" Style="{StaticResource BtnAi}"
                                        IsEnabled="{Binding HasSelectedPatient, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        ToolTip="Ctrl+D — Send all visit data to AI for differential diagnosis"
                                        Click="BtnAiSuggest_Click"/>
                            </DockPanel>
                            <!-- Suggestions output -->
                            <Border Background="{StaticResource AppSurface}" CornerRadius="6" Padding="12">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AiSuggestions}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBox Text="{Binding AiSuggestions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="False"
                                         TextWrapping="Wrap"
                                         FontSize="14" FontFamily="Segoe UI"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalScrollBarVisibility="Auto"
                                         MaxHeight="400"
                                         ToolTip="AI-generated differential diagnosis — edit freely before saving"/>
                            </Border>
                            <!-- Empty state hint -->
                            <TextBlock Text="Click 'Suggest Diagnosis' or press Ctrl+D to get AI-assisted differential diagnosis based on all visit data."
                                       FontSize="12" Foreground="{StaticResource AppAiText}" FontStyle="Italic"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AiSuggestions}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>


                    <!-- ═══════════════════════ LAB RESULTS ═══════════════════════ -->
            <Border Background="{DynamicResource AppAccentLight}"
                    BorderBrush="{DynamicResource AppBorder}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12,8,12,12"
                    Margin="20,0,20,8">
                        <StackPanel>

                            <!-- Header -->
                            <DockPanel Margin="0,0,0,12">
                                <TextBlock Text="🧪 Lab Results" Margin="0,0,10,0"
                                           FontSize="18" FontWeight="Bold" Foreground="{StaticResource AppForeground}"
                                           VerticalAlignment="Center"/>
                                <!-- OCR status badge -->
                                <Border x:Name="OcrStatusBadge"
                                        Background="{StaticResource AppLabLight}" CornerRadius="10"
                                        Padding="8,3" Margin="10,0,0,0"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtOcrStatus"
                                               Text="📷 Saving image…"
                                               FontSize="11" Foreground="{StaticResource AppLab}"/>
                                </Border>
                                <Button x:Name="BtnAddNewLabTest"
                                        Content="+ New Test to Catalog"
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource BtnLab}"
                                        Margin="0,0,6,0"
                                        Click="BtnAddNewLabTest_Click"/>
                                <!-- OCR button -->
                                <Button x:Name="BtnOcrLabImage"
                                        Content="🔬 Read Image"
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource BtnPrimary}"
                                        ToolTip="Pick a lab result image — AI will auto-fill the form fields"
                                        Click="BtnOcrLabImage_Click"/>
                            </DockPanel>

                            <!-- Row 1: Test name autocomplete + Result value -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Test name" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <Grid>
                                        <TextBox x:Name="TxtLabTest"
                                                 Text="{Binding LabTestSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="8" FontSize="14"
                                                 TextChanged="TxtLabTest_TextChanged"
                                                 LostFocus="TxtLabTest_LostFocus"/>
                                        <Popup x:Name="LabSuggestPopup"
                                               PlacementTarget="{x:Reference TxtLabTest}"
                                               Placement="Bottom" StaysOpen="False"
                                               Width="{Binding ActualWidth, ElementName=TxtLabTest}">
                                            <Border Background="{StaticResource AppSurface}" BorderBrush="{StaticResource AppBorderLight}" BorderThickness="1">
                                                <ListBox x:Name="LabSuggestList"
                                                         MaxHeight="180"
                                                         SelectionChanged="LabSuggestList_SelectionChanged"
                                                         DisplayMemberPath="TestName"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Result value" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding LabResultValue, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="14"
                                             ToolTip="e.g. 5.2, Positive, Normal"/>
                                </StackPanel>
                            </Grid>

                            <!-- Row 2: Unit dropdown (SI/Imperial) + Normal range (editable) -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Unit  (choose SI / Imperial or type custom)"
                                               FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <ComboBox x:Name="CbLabUnit"
                                              ItemsSource="{Binding LabUnitOptions}"
                                              SelectedItem="{Binding LabSelectedUnitOption}"
                                              IsEditable="True"
                                              Text="{Binding LabResultUnit, UpdateSourceTrigger=PropertyChanged}"
                                              Padding="6,6" FontSize="13"
                                              SelectionChanged="CbLabUnit_SelectionChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3">
                                        <Run Text="Normal range"/>
                                        <Run Text=" — auto-filled, editable, saved with visit"
                                             Foreground="{StaticResource AppForeground4}"/>
                                    </TextBlock>
                                    <!-- IsEditable ComboBox: dropdown lists catalog ranges,
                                         doctor can freely type a custom range instead.
                                         Selecting a range also switches the Unit to match. -->
                                    <ComboBox x:Name="CbLabNormalRange"
                                              ItemsSource="{Binding LabNormalRangeOptions}"
                                              IsEditable="True"
                                              Text="{Binding LabNormalRange, UpdateSourceTrigger=PropertyChanged}"
                                              Padding="6,6" FontSize="13"
                                              Background="{StaticResource AppLabNote}"
                                              ToolTip="Pre-filled from catalog — change freely to match your lab kit's reference range"
                                              SelectionChanged="CbLabNormalRange_SelectionChanged"/>
                                </StackPanel>
                            </Grid>

                            <!-- Row 3: Notes + Add button -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Notes" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding LabResultNotes, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="13"
                                             ToolTip="Any additional notes about this result"/>
                                </StackPanel>
                                <Button Grid.Column="2"
                                        Content="+ Add"
                                        Margin="0,18,0,0"
                                        Style="{StaticResource BtnLab}"
                                        IsEnabled="{Binding CanAddLabItem}"
                                        Click="AddLabResultButton_Click"/>
                            </Grid>

                            <!-- Lab result list -->
                            <ItemsControl x:Name="LabResultList"
                      ItemsSource="{Binding LabResults}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource AppLabBg}"
                                                BorderBrush="{StaticResource AppLabBorder}"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="10,8"
                                                Margin="0,0,0,6">
                                            <StackPanel>
                                                <!-- Top row: test name + result + remove -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AppLab}">
                                                            <Run Text="{Binding TestName}"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="13" Foreground="{StaticResource AppForeground}" Margin="0,2,0,0">
                                                            <Run Text="{Binding ResultValue}" FontWeight="Bold"/>
                                                            <Run Text=" "/>
                                                            <Run Text="{Binding Unit}" Foreground="{StaticResource AppForeground8}"/>
                                                            <Run Text="  " Foreground="{StaticResource AppForeground4}"/>
                                                            <Run Text="Ref: " Foreground="{StaticResource AppForeground3}" FontSize="11"/>
                                                            <Run Text="{Binding NormalRange}" Foreground="{StaticResource AppForeground3}" FontSize="11"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding Notes}"
                                               FontSize="11" Foreground="{StaticResource AppForeground8}"
                                               FontStyle="Italic" Margin="0,2,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Notes}" Value="">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <!-- Attach buttons -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                                        <Button Content="📎 Attach"
                                                                Style="{StaticResource BtnLab}"
                                                                Margin="0,0,4,0"
                                                                Tag="{Binding}"
                                                                Click="AttachImageButton_Click"/>
                                                                            <Button Content="🖨 Scan"
                                                                Style="{StaticResource BtnLabScan}"
                                                                Tag="{Binding}"
                                                                Click="ScanImageButton_Click"/>
                                                    </StackPanel>
                                                    <!-- Remove -->
                                                     <Button Grid.Column="2"
                                                             Content="&#xD7;"
                                                             Style="{StaticResource BtnDanger}"
                                                             VerticalAlignment="Top" Margin="4,0,0,0"
                                                             Tag="{Binding}"
                                                             Click="RemoveLabResultButton_Click"/>
                                                </Grid>

                                                <!-- Attachment thumbnails strip -->
                                                <ItemsControl ItemsSource="{Binding Attachments}"
                                          Margin="0,6,0,0">
                                                    <ItemsControl.Style>
                                                        <Style TargetType="ItemsControl">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasAttachments}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ItemsControl.Style>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="{StaticResource AppLabBorder}" BorderThickness="1"
                                                CornerRadius="4" Margin="0,0,6,0"
                                                Background="{StaticResource AppSurface}">
                                                                <Grid>
                                                                    <StackPanel>
                                                                        <!-- Image thumbnail -->
                                                                        <Image Source="{Binding FilePath, Converter={StaticResource FilePathToThumbnail}}"
                                                                               Width="90" Height="70"
                                                                               Stretch="UniformToFill"
                                                                               Margin="4,4,4,0"
                                                                               Cursor="Hand"
                                                                               Tag="{Binding FilePath}"
                                                                               MouseLeftButtonUp="AttachmentImage_Click">
                                                                            <Image.Style>
                                                                                <Style TargetType="Image">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding IsImage}" Value="False">
                                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Image.Style>
                                                                        </Image>
                                                                        <!-- Non-image file icon -->
                                                                        <TextBlock Text="📄"
                                                                                   FontSize="36"
                                                                                   HorizontalAlignment="Center"
                                                                                   Margin="4,4,4,0"
                                                                                   Cursor="Hand"
                                                                                   Tag="{Binding FilePath}"
                                                                                   MouseLeftButtonUp="AttachmentImage_Click">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding IsImage}" Value="False">
                                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                        <!-- File name -->
                                                                        <TextBlock Text="{Binding FileName}"
                                                                                   FontSize="10" Foreground="{StaticResource AppForeground8}"
                                                                                   MaxWidth="94" TextWrapping="Wrap"
                                                                                   Margin="4,2,4,4"
                                                                                   TextAlignment="Center"/>
                                                                    </StackPanel>
                                                                    <!-- remove attachment X -->
                                                                    <Button Content="✕"
                                                                            Width="18" Height="18"
                                                                            Style="{StaticResource BtnDangerSolid}"
                                                                            HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                            Tag="{Binding}"
                                                                            Click="RemoveAttachmentButton_Click"/>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="No lab results added yet."
                                       FontSize="13" Foreground="{StaticResource AppForeground4}"
                                       HorizontalAlignment="Center" Margin="0,8">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LabResults.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                        </StackPanel>
                    </Border>
                    <!-- ════════════════ END LAB RESULTS ════════════════ -->
                    
                    <!-- ═══════════════════════ PRESCRIPTION ═══════════════════════ -->
            <Border Background="{DynamicResource AppAccentLight}"
                            BorderBrush="{DynamicResource AppBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,8,12,12"
                            Margin="20,0,20,8">
                        <StackPanel>

                            <!-- Header -->
                            <DockPanel Margin="0,0,0,12">
                                <TextBlock Text="&#x1F48A; Prescription"
                                           FontSize="18" FontWeight="Bold" Foreground="{StaticResource AppForeground}"
                                           VerticalAlignment="Center" Margin="0,0,20,0"/>
                                <Button x:Name="BtnAddNewDrug"
                                        Content="+ New Drug to Catalog"
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource BtnAi}"
                                        Margin="8,0,0,0"
                                        Click="BtnAddNewDrug_Click"/>
                                <Button x:Name="BtnPrintPrescription"
                                        Content="🖨 Print Prescription"
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource BtnRx}"
                                        Click="BtnPrintPrescription_Click"/>
                            </DockPanel>

                            <!-- Input row 1: Drug autocomplete + Dose -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Drug name" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <Grid>
                                        <TextBox x:Name="TxtRxDrug"
                                                 Text="{Binding RxDrugText, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="8" FontSize="14"
                                                 TextChanged="TxtRxDrug_TextChanged"
                                                 LostFocus="TxtRxDrug_LostFocus"/>
                                        <Popup x:Name="DrugSuggestPopup"
                                               PlacementTarget="{x:Reference TxtRxDrug}"
                                               Placement="Bottom"
                                               StaysOpen="False"
                                               Width="{Binding ActualWidth, ElementName=TxtRxDrug}">
                                            <Border Background="{StaticResource AppSurface}" BorderBrush="{StaticResource AppBorderLight}" BorderThickness="1">
                                                <ListBox x:Name="DrugSuggestList"
                                                         MaxHeight="180"
                                                         SelectionChanged="DrugSuggestList_SelectionChanged"
                                                         DisplayMemberPath="BrandName"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Dose / Strength" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding RxDose, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="14"
                                             ToolTip="e.g. 500 mg, 10 mL"/>
                                </StackPanel>
                            </Grid>

                            <!-- Input row 2: Route + Frequency + Duration -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Route" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding RouteOptions, Mode=OneTime}"
                                              Text="{Binding RxRoute, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="True"
                                              Padding="10,6,30,6" FontSize="13"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Frequency" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <ComboBox ItemsSource="{Binding FrequencyOptions, Mode=OneTime}"
                                              Text="{Binding RxFrequency, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="True"
                                              Padding="6,6" FontSize="13"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Duration (days)" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding RxDuration, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="13"
                                             ToolTip="e.g. 7, 14, 30"/>
                                </StackPanel>
                            </Grid>

                            <!-- Input row 3: Instructions + Add button -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Instructions / Notes" FontSize="11" Foreground="{StaticResource AppForeground3}" Margin="0,0,0,3"/>
                                    <TextBox Text="{Binding RxInstructions, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8" FontSize="13"
                                             ToolTip="e.g. Take after meals, avoid grapefruit"/>
                                </StackPanel>
                                <Button Grid.Column="2"
                                        Content="+ Add"
                                        Margin="0,18,0,0"
                                        Style="{StaticResource BtnSuccess}"
                                        IsEnabled="{Binding CanAddPrescription}"
                                        Click="AddPrescriptionButton_Click"/>
                            </Grid>

                            <!-- Prescription list -->
                            <ItemsControl x:Name="PrescriptionList"
                                          ItemsSource="{Binding Prescriptions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource AppAiLight}"
                                                BorderBrush="{StaticResource AppAiBorder}"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="10,8"
                                                Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AppAiText}">
                                                        <Run Text="{Binding DrugName}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding Form}" Foreground="{StaticResource AppForeground3}" FontSize="12" FontWeight="Normal"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="{StaticResource AppForeground8}" Margin="0,2,0,0">
                                                        <Run Text="{Binding Dose}" FontWeight="SemiBold"/>
                                                        <Run Text=" · " Foreground="{StaticResource AppForeground4}"/>
                                                        <Run Text="{Binding Route}"/>
                                                        <Run Text=" · " Foreground="{StaticResource AppForeground4}"/>
                                                        <Run Text="{Binding Frequency}"/>
                                                        <Run Text=" · " Foreground="{StaticResource AppForeground4}"/>
                                                        <Run Text="{Binding DurationDays}"/>
                                                        <Run Text=" days" Foreground="{StaticResource AppForeground3}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Instructions}"
                                                               FontSize="11" Foreground="{StaticResource AppForeground8}"
                                                               FontStyle="Italic" Margin="0,2,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Instructions}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Instructions}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Content="&#xD7;"
                                                        Style="{StaticResource BtnDanger}"
                                                        VerticalAlignment="Top"
                                                        Tag="{Binding}"
                                                        Click="RemovePrescriptionButton_Click"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="No prescriptions added yet."
                                       FontSize="13" Foreground="{StaticResource AppForeground4}"
                                       HorizontalAlignment="Center" Margin="0,8">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Prescriptions.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                        </StackPanel>
                    </Border>
                    <!-- ════════════════ END PRESCRIPTION ════════════════ -->

                    

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                        <Button Content="💾 Save Visit"
                                Margin="0,0,10,0"
                                Click="SaveVisitButton_Click"
                                Style="{StaticResource SaveVisitButtonStyle}"/>
                        <Button Content="✅ Complete Visit"
                                Margin="0,0,10,0"
                                Click="CompleteVisitButton_Click"
                                Style="{StaticResource CompleteVisitButtonStyle}"/>
                        <Button Content="⏸ Pause Visit"
                                Margin="0,0,10,0"
                                Click="PauseVisitButton_Click"
                                Style="{StaticResource PauseVisitButtonStyle}"/>
                        <Button Content="📋 Print Summary"
                                Click="BtnPrintSummary_Click"
                                Style="{StaticResource PrintSummaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
    </ScrollViewer>
</UserControl>
